<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/studentlistitemview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/rollnumberview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="#fff"
        android:textSize="30sp"
        tools:text="21" />

    <TextView
        android:id="@+id/studentnameview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="#fff"
        tools:text="SAGAR SALEKAR" />


    <RelativeLayout
        android:id="@+id/studentattendanceview"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:visibility="invisible">

        <TextView
            android:id="@+id/studentattendancenumberview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/studentattendancepercentageview"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="15sp"
            tools:text="35/40" />

        <TextView
            android:id="@+id/studentattendancepercentageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="#fdbf37"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="30sp"
            tools:text="75%" />

    </RelativeLayout>


</LinearLayout>




